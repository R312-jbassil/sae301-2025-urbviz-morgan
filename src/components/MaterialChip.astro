---
interface Materiau {
  id: string;
  libelle: string;
}

interface Props {
  material: Materiau;
  active?: boolean;
}

const { material, active = false } = Astro.props;
---
<span
  class:list={[
    "inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-medium shadow-sm transition",
    "bg-secondary/15 text-neutral",
    active ? "ring-2 ring-secondary ring-offset-2 ring-offset-base-100" : "ring-1 ring-secondary/30",
  ]}
>
  <span class="size-2 rounded-full bg-secondary"></span>
  {material.libelle}
</span>
